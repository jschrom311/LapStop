<!doctype html>
<html>
<head>
    <title>LapStop</title>
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <!--<div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>-->
        <div class="jumbotron text-center">
                <h1><span class="fa fa-lock"></span> LapStop</h1>
                <h2>World's leading app in laptop theft prevention</h2>    
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> My Profile</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>
                    
                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>



    <p id="demo"></p>
    
    <% if (locations) { %>
        <script>
           var loc = <%- JSON.stringify(locations) %>        
        </script>
    <% } %>

    <button role="button" id="arm_button" class="btn btn-default">Secure your device</button>
    <div id="map"></div>
      <% for (var key in locations) { %>
        <h3><%= locations[key].latitude %></h3>
        <h3><%= locations[key].longitude %></h3>
        <h3><%= locations[key].timestamp %></h3>
    <% } %>

    <script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
    <script>
        var socket = io();
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCVCbPS40tAPyjYaLF3gXNtEz3mOARG5Wo"
      ></script>
      <script src="./script.js"></script>
</div>
</body>
</html>
